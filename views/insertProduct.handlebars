<div class="main-container">
  <div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
      <!-- Simple Datatable start -->
      <div class="card-box mb-30">
        <div class="pd-20">
          <h4 class="text-blue h4">Thêm sản phẩm</h4>
          <form action="/products/insert" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <label>Tên sản phẩm</label>
              <input required="" class="form-control" placeholder="Nhập tên sản phẩm" type="text" name="productName"
                value="{{productName}}">
            </div>
            <div class="form-group">
              <label>Chọn ảnh</label>
              <input type="file" name="image" class="form-control-file form-control height-auto" id="imageInput"
                accept="image/png, image/jpeg">
            </div>
            <div style="display: flex; justify-content: center;">
              <img
                src="https://res.cloudinary.com/dlaasqvqu/image/upload/v1703692844/24h_coffee/jneghbypc5xcrvyfgk5g.png"
                id="selectedImage" style="width: 200px; height: 200px;">
            </div>
            <div class="form-group">
              <label>Giá sản phẩm</label>
              <input required="0" class="form-control" placeholder="Nhập giá sản phẩm" type="number" min="10000" name="productPrice" value="{{productPrice}}">
            </div>
            <div class="form-group">
              <label>Trạng thái</label>
              <select class="form-control" name="productStatus">
                <option value="Còn hàng">Còn hàng</option>
                <option value="Hết hàng">Hết hàng</option>
              </select>
            </div>
            <div class="form-group">
              <label>Danh mục</label>
              <select class="form-control" name="categoryID">
                {{#each categories}}
                <option value="{{this.id}}">{{this.tenDanhMuc}}</option>
                {{/each}}
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Sau khi chọn ảnh sẽ hiển thị hình ảnh theo kích thước
  document.getElementById('imageInput').addEventListener('change', function (e) {
    const file = e.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = function (event) {
        const selectedImage = document.getElementById('selectedImage');
        selectedImage.src = event.target.result;
        selectedImage.style.display = 'block';
      };
      reader.readAsDataURL(file);
    }
  });
</script>